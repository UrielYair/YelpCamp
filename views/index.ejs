<%- include("partials/header") %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Campgrounds Page</h1>
            <p>Here you can see campgrounds pictures.</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new camp</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display: flex; flex-wrap: wrap;">

        <% campgrounds.forEach((camp)=>{ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%=camp.image%>">
                    <div class="caption"><h3><%= camp.name%></h3></div>
                    <p><a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a></p>
                </div>
            </div>
        <% }) %>

    </div>

    

</div>

<%- include("partials/footer") %>
